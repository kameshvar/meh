<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF43"
    tools:context="com.example.ctadmin.myapplication.MainActivity5"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/photo_image_view1"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:scaleType="centerCrop"
        android:src="@drawable/find1"
        android:layout_weight="0.71" />

    <TextView
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:text="@string/q"
        android:textStyle="bold|italic"
        android:id="@+id/textView1"
        android:layout_weight="0.14" />

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/q2_options"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:text="lobster"
            android:textSize="25dp"
            android:id="@+id/male"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="match_parent"
            android:text="octopus"
            android:textSize="25dp"
            android:id="@+id/female"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="127dp"
            android:text="crab"
            android:textSize="25dp"
            android:id="@+id/male1"
            android:layout_height="match_parent" />
    </RadioGroup>
        <ImageView
            android:id="@+id/photo_image_view2"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="241dp"
            android:scaleType="centerCrop"
            android:src="@drawable/find2"
            android:layout_weight="0.43" />
        <TextView
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="guess the animal and their number in the image"
            android:textStyle="bold|italic"
            android:id="@+id/textView2"
            android:layout_weight="0.14" />
        <CheckBox
            android:layout_width="match_parent"
            android:text="tiger"
            android:textSize="25dp"
            android:id="@+id/checkbox1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:text="leopard"
            android:textSize="25dp"
            android:id="@+id/checkbox2"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:text="four"
            android:textSize="25dp"
            android:id="@+id/checkbox3"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:text="five"
            android:textSize="25dp"
            android:id="@+id/checkbox4"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/photo_image_view3"
            android:layout_width="761dp"
            android:layout_marginTop="2dp"
            android:layout_height="496dp"
            android:scaleType="centerCrop"
            android:src="@drawable/find3"
            android:layout_weight="0.50" />

        <TextView
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="name the cartoon character"
            android:textStyle="bold|italic"
            android:id="@+id/textView3"
            android:layout_weight="0.14" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:id="@+id/edittextsample"
            android:hint="type your answer"
           />
        <ImageView
            android:id="@+id/photo_image_view4"
            android:layout_width="864dp"
            android:layout_marginTop="2dp"
            android:layout_height="554dp"
            android:scaleType="centerCrop"
            android:src="@drawable/find4"
            android:layout_weight="0.47" />

        <TextView
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="do yuo know the name of this sport"
            android:textStyle="bold|italic"
            android:id="@+id/textView5"
            android:layout_weight="0.14" />
        <RadioGroup
            android:layout_width="1135dp"
            android:id="@+id/q3_options"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <RadioButton
                android:layout_width="396dp"
                android:text="yes"
                android:textSize="25dp"
                android:id="@+id/male2"
                android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="0dp"
            android:text="no"
            android:textSize="25dp"
            android:id="@+id/female1"
            android:layout_height="wrap_content"
            android:layout_weight="0.87" />
    </RadioGroup>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:id="@+id/edittextsample1"
            android:hint="type your answer"
            />
    </LinearLayout>
</ScrollView>
